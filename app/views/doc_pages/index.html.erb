<% provide(:title, 'Filing Documents') %>
<h1>Listing doc_pages</h1>

<%= form_tag doc_pages_path, :method => :get do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :pagetext => nil %>
</p>
<% end %>


<table>
  <tr>
    <th>Doc ID</th>
    <th>Summary</th>
    <th>Word Count</th>
    <th>Page #</th>
    <th>View</th>
  </tr>

<% @doc_pages.each do |doc_page| %>
  <tr>
    <td><%= link_to "Doc #{doc_page.id}", doc_page %></td>
    <td><%= truncate(doc_page.pagetext, :length => 50) %></td>
    <td><%= doc_page.wordcount %></td>
    <td><%= doc_page.pagenumber %></td>
    <td><%= link_to "View", doc_page %></td>
  </tr>
<% end %>
</table>